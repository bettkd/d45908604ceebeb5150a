extends layout

block content
	h1= title
	h2.title Login
	hr
	form(id="frmlogin" action="/login" method="post")
		p #{err}

		p
			label(for="email") Email
			input#email(type="text", name="email", value= (!!email) ? email : "")
		p
			label(for="password") Password
			input#password(type="password", name="password")
		p
			button.btn.left(id="btnLogin") Login